<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#3D3D3D"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <ImageView
        android:src="@drawable/logo_image"
        android:id="@+id/ivLogoImage"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75px"
        android:layout_width="300px"
        android:layout_height="300px" />

    <ImageView
        android:layout_width="64px"
        android:layout_height="64px"
        android:src="@drawable/user_icon"
        android:id="@+id/ivUserIcon"
        android:layout_below="@+id/ivLogoImage"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:id="@+id/editText"
        android:fontFamily="sans-serif"
        android:textSize="50px"
        android:hint="Username"
        android:textColor="#ffffff"
        android:layout_marginLeft="20px"
        android:focusable="true"
        android:textColorHighlight="#ff7eff15"
        android:textColorHint="#c0c0c0"
        android:layout_alignTop="@+id/ivUserIcon"
        android:layout_toRightOf="@+id/ivUserIcon" />

    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/separator"
        android:layout_height="wrap_content"
        android:id="@+id/ivUserSeparator"
        android:paddingBottom="50px"
        android:layout_below="@+id/ivUserIcon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="64px"
        android:layout_height="64px"
        android:src="@drawable/password_icon"
        android:id="@+id/ivPasswordIcon"
        android:layout_below="@+id/ivUserSeparator"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/separator"
        android:layout_height="wrap_content"
        android:id="@+id/ivPasswordSeparator"
        android:layout_below="@id/ivPasswordIcon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:inputType="textPassword"
        android:id="@+id/editText2"
        android:fontFamily="sans-serif"
        android:textColorHint="#c0c0c0"
        android:hint="Password"
        android:textColor="#ffffff"
        android:textSize="50px"
        android:layout_marginLeft="20px"
        android:layout_alignTop="@+id/ivPasswordIcon"
        android:layout_toRightOf="@+id/ivPasswordIcon" />

    <Button
        android:layout_width="400px"
        android:layout_height="90px"
        android:hint="Login"
        android:layout_marginTop="50px"
        android:id="@+id/button"
        android:fontFamily="sans-serif"
        android:textSize="50px"
        android:textColorHint="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ivPasswordSeparator"
        android:background="@drawable/login_2"/>

</RelativeLayout>